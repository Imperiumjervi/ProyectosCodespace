{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "${workspaceFolder}",
        "-B", "${workspaceFolder}/build"
      ],
      "group": "build"
    },
    {
      "label": "Build Ejemplo1",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "${workspaceFolder}/build",
        "--target", "ejemplo1"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "dependsOn": "CMake: Configure"
    },
    ///Asi se agregan mas
    {
      "label": "Build taller",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "${workspaceFolder}/build",
        "--target", "taller"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "dependsOn": "CMake: Configure"
    }
  ]
}
